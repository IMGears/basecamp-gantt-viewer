<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Select Project - Basecamp Gantt Viewer</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container">
    <header class="page-header">
      <div>
        <h1>Select a Project</h1>
        <p class="page-description">Choose a project to view its tasks as a Gantt chart</p>
      </div>
      <nav>
        <a href="/dashboard" class="btn">Dashboard</a>
        <a href="/auth/logout" class="btn">Logout</a>
      </nav>
    </header>

    <% if (error) { %>
      <div class="error-message"><%= error %></div>
    <% } %>

    <% if (projects.length === 0) { %>
      <div class="no-projects">
        <p>No projects found in your Basecamp account.</p>
      </div>
    <% } else { %>
      <div class="projects-grid">
        <% projects.forEach(project => { %>
          <a href="/gantt/view?accountId=<%= accountId %>&projectId=<%= project.id %>" class="project-card">
            <h3><%= project.name %></h3>
            <% if (project.description) { %>
              <p><%= project.description.substring(0, 100) %><%= project.description.length > 100 ? '...' : '' %></p>
            <% } %>
            <div class="project-meta">
              <% if (project.purpose) { %>
                <%= project.purpose %>
              <% } %>
            </div>
          </a>
        <% }); %>
      </div>
    <% } %>
  </div>
</body>
</html>
